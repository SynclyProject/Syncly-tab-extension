{
  "manifest_version": 3,
  "name": "Syncly Tab Extension",
  "version": "1.0.0",
  "description": "Save and open tab sessions for Syncly",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://api.syncly-io.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Syncly Tab Saver"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "http://localhost:5173/*",
      "http://localhost:*/*"
    ]
  }
}